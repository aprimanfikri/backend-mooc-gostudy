{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": [
    "models/",
    "migrations/",
    "seeders/",
    "postcss.config.js",
    "server/",
    "utils/apiError.js"
  ],
  "rules": {
    "quotes": ["off", "single"],
    "linebreak-style": ["off", "windows"],
    "object-curly-newline": ["off", "always"],
    "comma-dangle": ["off", "always"],
    "operator-linebreak": ["error", "after"]
  }
}
